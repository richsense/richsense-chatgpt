---
import ThemeToggle from "./ThemeToggle.astro"
import Logo from "./Logo.astro"
---

<header>
  <div class="flex justify-between items-center">
    <span class="w-100px logo">
      <Logo />
    </span>
    <!-- <img src="/favicon.svg" class="w-100px logo"/> -->
    <ThemeToggle />
  </div>
  <div class="flex items-center mt-4 text-2xl title">
    <span
      class="text-transparent font-extrabold bg-clip-text bg-gradient-to-r from-yellow-300 to-red-700 mr-1"
      >ChatGPT</span
    >
    <span class="ml-1 font-extrabold text-slate-7 dark:text-slate">(Let's talk)</span>
  </div>
  
  <div class="flex items-center mt-3">
    <p mt-2 text-sm text-slate>
     <a
      border-b
      border-slate
      border-none
      hover:border-dashed
      href="https://github.com/richsense/richsense-chatgpt"
      target="_blank"
     >
      Github
    </a>
    <span px-1>|</span>
    <a
      border-b
      border-slate
      border-none
      hover:border-dashed
      href="https://t.me/chatGPT_rich"
      target="_blank"
    >
      Telegram
    </a>
    <span px-1>|</span>
    <a
      border-b
      border-slate
      border-none
      hover:border-dashed
      href="https://platform.openai.com/docs/guides/chat"
      target="_blank"
    >
    OpenAI API (gpt-3.5-turbo)
    </a>
    </p>
</div>

<div class="flex items-center mt-3 font-extrabold bg-clip-text bg-gradient-to-r from-yellow-300 to-red-700 mr-1">
  <p mt-1 text-sm text-slate>
    [ 点击设置, 填入个人的 api key 可以无限制使用 ]
  </p>
</div>
</header>


<style is:inline>
  .after .title,
  .after #themeToggle,
  .after .logo,
  .after #message-container {
    transition-property: transform, opacity;
    transition-duration: 1s;
    transition-timing-function: ease-in-out;
  }

  .before .logo {
    transform: translate3D(25px, 150px, 0) scale(2);
  }
  .before #themeToggle {
    transform: translate3D(0, 200px, 0) rotate(540deg);
  }

  .before .title,
  .before #message-container {
    transform: translate3D(0, 200px, 0);
  }

  #themeToggle {
    border: 0;
    opacity: 1;
  }

  .before #themeToggle,
  .before #message-container {
    opacity: 0;
  }

 .after #message-container {
    opacity: 1;
  }
</style>

